{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"include": [
			"src/**",
			"scripts/**",
			"stories/**",
			"tests/**"
		]
	},
	"formatter": {
		"enabled": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"noUselessElse": "off",
				"noParameterAssign": "off",
				"noDefaultExport": "error"
			},
			"complexity": {
				"useLiteralKeys": "off"
			},
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn",
				"noUnusedFunctionParameters": "warn",
				"noUnusedLabels": "warn",
				"noUnusedPrivateClassMembers": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	},
	"overrides": [
		{
			"include": ["**/*.svelte"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedImports": "off",
						"noUnusedVariables": "off",
						"noUnusedFunctionParameters": "off",
						"noUnusedLabels": "off",
						"noUnusedPrivateClassMembers": "off"
					},
					"style": {
						"useConst": "off"
					}
				}
			}
		}
	]
}
